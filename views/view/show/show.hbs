
<section class="s-featured">
    <div class="row">
        <div class="col-full">
            <div class="featured-slider featured" data-aos="zoom-in">

     {{#each rotate}}

                <div class="featured__slide">
                    <div class="entry">
                        <div class="entry__background" style="background-image: url(data:{{this.img.data}})"></div>

                        <div class="entry__content">
                            <span class="entry__category"><a href="/category/{{this.category}}?page=1">{{this.category}}</a></span>

                            <h1><a href="/users/single/{{this.id}}">{{this.title}}</a></h1>

                            <div class="entry__info">
                                <ul class="entry__meta" style="margin-left: 0px;">
                                    <li><a  href="/users/show/{{this.author}}?page=1">{{this.author_name}}</a></li>
                                    <li>{{this.date}}</li>
                                </ul>
                            </div>
                        </div> <!-- end entry__content -->

                    </div> <!-- end entry -->
                </div> <!-- end featured__slide -->

         {{/each}}


            </div> <!-- end featured -->
        </div>
    </div>
</section> <!-- end s-featured -->

