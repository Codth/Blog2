<!--    Pagination    -->

    <div v-if="'{{query}}'">
        <div class="row pagination-wrap">
            <div class="col-full">
                <nav class="pgn" data-aos="fade-up">
                    <ul>
                        <li v-show={{post.previous.page}}>
                            <a class="pgn__prev" href="/search?page={{post.previous.page}}&q={{query}}">Prev</a>
                        </li>

                        {{#each series}}
                            <li v-if=" '{{this}}' == '...' " >
                                <a class="pgn__num dots" href="/search?page={{../jump}}&q={{query}}">…</a>
                            </li>

                            <li v-else>
                                <a v-if=" '{{this}}'=='{{../highlight}}'"  class="pgn__num current">
                                    {{this}}
                                </a>
                                <a v-else    class="pgn__num"  href="/search?page={{this}}&q={{query}}"   >
                                {{this}}
                                </a>
                            </li>
                        {{/each}}
                        <li v-show={{post.next.page}}>
                            <a class="pgn__next" href="/search?page={{post.next.page}}&q={{query}}">Next</a>
                        </li>
                    </ul>
                </nav>
            </div>
        </div>

    </div>

    <div v-else>

        <div class="row pagination-wrap">
            <div class="col-full">
                <nav class="pgn" data-aos="fade-up">
                    <ul>
                        <li v-show={{post.previous.page}}>
                            <a class="pgn__prev" href="/?page={{post.previous.page}}">Prev</a>
                        </li>

                        {{#each series}}
                            <li v-if=" '{{this}}' == '...' " >
                                <a class="pgn__num dots" href="/?page={{../jump}}">…</a>
                            </li>

                            <li v-else>
                                <a v-if=" '{{this}}'=='{{../highlight}}'"  class="pgn__num current">
                                    {{this}}
                                </a>
                                <a v-else    class="pgn__num"  href="/?page={{this}}"   >
                                {{this}}
                                </a>
                            </li>
                        {{/each}}
                        <li v-show={{post.next.page}}>
                            <a class="pgn__next" href="/?page={{post.next.page}}">Next</a>
                        </li>
                    </ul>
                </nav>
            </div>
        </div>
    </div>






